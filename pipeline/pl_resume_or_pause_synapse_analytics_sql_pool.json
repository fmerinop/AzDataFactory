{
	"name": "pl_resume_or_pause_synapse_analytics_sql_pool",
	"properties": {
		"description": "Resume or Pause Azure Synapse Analytics SQL Pool that has been created in Azure Synapse Analytics Workspaces. Created by https://techtalkcorner.com.",
		"activities": [
			{
				"name": "Check Azure Synapse Analytics Status",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroupName,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.ServerName,'/sqlPools/',pipeline().parameters.DatabaseName,'?api-version=2021-03-01')",
						"type": "Expression"
					},
					"method": "GET",
					"authentication": {
						"type": "MSI",
						"resource": "https://management.azure.com/"
					}
				}
			},
			{
				"name": "Resume or Pause",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Check Azure Synapse Analytics Status",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@or(and(equals(activity('Check Azure Synapse Analytics Status').output.properties.status,'Online'), equals(pipeline().parameters.Command,'Pause')),and(equals(activity('Check Azure Synapse Analytics Status').output.properties.status,'Paused'), equals(pipeline().parameters.Command,'Resume')))",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "Resume or Pause Azure Synapse Analytics",
							"description": "Pause Azure Synapse Analytics created in Azure Synapse Analytics Workspaces using REST APIs",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 3,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Azure Synapse Analytics",
									"value": "Resume or Pause"
								}
							],
							"typeProperties": {
								"url": {
									"value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroupName,'/providers/Microsoft.Synapse/workspaces/',pipeline().parameters.ServerName,'/sqlPools/',pipeline().parameters.DatabaseName,'/',pipeline().parameters.Command,'?api-version=2019-06-01-preview')",
									"type": "Expression"
								},
								"method": "POST",
								"body": {
									"value": "{}",
									"type": "Expression"
								},
								"authentication": {
									"type": "MSI",
									"resource": "https://management.azure.com/"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"SubscriptionId": {
				"type": "string",
				"defaultValue": "f0a7ea22-7d29-4be5-bff5-4deedd058dcc"
			},
			"ResourceGroupName": {
				"type": "string",
				"defaultValue": "rg-sgs-g6-poc"
			},
			"Region": {
				"type": "string",
				"defaultValue": "westeurope"
			},
			"ServerName": {
				"type": "string",
				"defaultValue": "sgs-synapse-workspace"
			},
			"DatabaseName": {
				"type": "string",
				"defaultValue": "sqldwsgsg6pool"
			},
			"Command": {
				"type": "string",
				"defaultValue": "Pause"
			}
		},
		"folder": {
			"name": "Manage"
		},
		"annotations": [
			"Synapse Analytics"
		],
		"lastPublishTime": "2020-11-13T07:03:47Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}